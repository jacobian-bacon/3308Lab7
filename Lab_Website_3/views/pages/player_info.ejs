<% include ../partials/header %>
<% include ../partials/menu %>
	<div class="container">
		<br>
		<div class="row">
			<div class="col-4">
				<div class="card">
				<!-- TODO: Modify the ejs code below, to conditionally set the image_src to be from our chosen player -->
				  <%
				  var image_src = '../resources/img/helmet.jpg';

				  %>
				 <img class="card-img-top" id="player_img" src= "<%- image_src %>" alt="Image of Football Player">
				  <div class="card-body mx-auto">
					<form class="form"action="/player_info/post" method="get">
						<select class="custom-select" name="player_choice" onchange="this.form.submit()">
							 <option selected>Select Player</option>
							 <!-- TODO: Populate our select with player options
							 			For each player, set a new option with a value matching the palyer's id,
							 			but will display the player's name-->
											<%
											if (data) {
												var dropdownitem = '';
												data[0].forEach(function(item){
													dropdownitem +=  "<option id =" +item.id +">" +item.name + "</option>";
												}); %>
											<%- dropdownitem %>
											<% } %>
						</select>
					</form>
				  </div>
				</div>
			</div>
			<div class="col-8">
				<div class="table-responsive">
					<table class="table">
						<tr>
							<!-- TODO: Set Player Information
							 			If a player has been selected, fill in their information in each of the fields below.
							 		    You'll need to calculate here the player's average rushing, receiving, and passing yards.-->
											<%
											if (data[1]) {
												var deets = '';
												data[1].forEach(function(item){
													deets += item.name;
												}); %>
											<%- deets %>
											<% } %>

							<th>Year</th>
							<td><%
							if (data[1]) {
								var deets = '';
								data[1].forEach(function(item){
									deets += item.year;
								}); %>
							<%- deets %>
							<% } %>	</td>
						</tr>
						<tr>
							<th>Major</th>
							<td>	<%
							if (data[1]) {
								var deets = '';
								data[1].forEach(function(item){
									deets += item.major;
								}); %>
							<%- deets %>
							<% } %></td>
						</tr>
						<tr>
							<th>Games Played</th>
							<td> <%
							if (data[1]) {
								var deets = '';
								data[2].forEach(function(item){
									deets += item.count;
								}); %>
							<%- deets %>
							<% } %>	</td>
						</tr>
						<tr>
							<td>Passing Yards:											<%
																		if (data[1]) {
																			var deets = '';
																			data[1].forEach(function(item){
																				deets += item.passing_yards;
																			}); %>
																		<%- deets %>
																		<% } %> </td>
							<td>Avg. Passing Yards: <%
																		if (data[1]) {
																			var deets = '';
																			data[4].forEach(function(item){
																				deets += item.pssngyrds;
																			}); %>
																		<%- deets %>
																		<% } %></td>
						</tr>
						<tr>
							<td>Rushing Yards:									<%
																		if (data[1]) {
																			var deets = '';
																			data[1].forEach(function(item){
																				deets += item.rushing_yards;
																			}); %>
																		<%- deets %>
																		<% } %></td>
							<td>Avg. Rushing Yards: <%
																		if (data[1]) {
																			var deets = '';
																			data[3].forEach(function(item){
																				deets += item.ryrds;
																			}); %>
																		<%- deets %>
																		<% } %></td>
						</tr>
						<tr>
							<td>Receiving Yards: 											<%
																		if (data[1]) {
																			var deets = '';
																			data[1].forEach(function(item){
																				deets += item.receiving_yards;
																			}); %>
																		<%- deets %>
																		<% } %></td>
							<td>Avg. Receiving Yards: <%
																		if (data[1]) {
																			var deets = '';
																			data[5].forEach(function(item){
																				deets += item.rcvngyrds;
																			}); %>
																		<%- deets %>
																		<% } %></td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>

<% include ../partials/footer %>
